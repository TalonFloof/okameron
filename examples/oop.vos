class Foo {
    var x Int
    /* Variables CANNOT be initialized outside of init! (Unless they are static) */

    func init(a Int) {
        x = a
    }
}

class Bar {
    private value Foo
    func init(a Foo) {
        value = a
    }
}

/* Single Inheritance is also supported */
class 🐦 { /* Yes, you can use UTF-8 symbols and text as identifiers! */
    func talk() {
        System.println("Tweet!")
    }
}

class 🦉 : 🐦 {
    func talk() {
        System.println("Hoot!")
    }
}

func main() {
    bird := 🐦()
    bird.talk()
    owl := 🦉()
    owl.talk()
}